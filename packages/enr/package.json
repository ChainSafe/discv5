{
  "name": "@chainsafe/enr",
  "version": "2.0.2",
  "description": "Ethereum name record",
  "type": "module",
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "import": "./lib/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "*",
        "lib/*",
        "lib/*/index"
      ]
    }
  },
  "types": "./lib/index.d.ts",
  "scripts": {
    "check-types": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "yarn build",
    "lint": "eslint --color --ext .ts src/ test/",
    "test": "yarn test:unit && yarn test:e2e",
    "test:perf": "NODE_OPTIONS='--max-old-space-size=4096 --loader=ts-node/esm' benchmark 'bench/**/*.bench.ts' --config .bench.yaml",
    "test:unit": "mocha 'test/unit/**/*.test.ts'"
  },
  "pre-push": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChainSafe/discv5.git"
  },
  "keywords": [
    "discovery",
    "discv5",
    "ethereum",
    "p2p"
  ],
  "author": "ChainSafe Systems",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ChainSafe/discv5/issues"
  },
  "homepage": "https://github.com/ChainSafe/discv5#readme",
  "devDependencies": {
    "@libp2p/peer-id-factory": "^4.0.3"
  },
  "dependencies": {
    "@libp2p/crypto": "^4.0.1",
    "@libp2p/interface": "^1.1.1",
    "@libp2p/peer-id": "^4.0.4",
    "@multiformats/multiaddr": "^12.1.10",
    "bigint-buffer": "^1.1.5",
    "ethereum-cryptography": "^2.1.3",
    "rlp": "^2.2.6",
    "uint8-varint": "^2.0.2",
    "uint8arrays": "^5.0.1"
  }
}
